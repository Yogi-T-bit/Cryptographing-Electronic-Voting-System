@page "/add-vote"
@attribute [Authorize]

<PageTitle>Add vote</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save vote</RadzenAlert>
        <RadzenTemplateForm TItem="CryptographingElectronicVotingSystem.Dal.Models.ElectronicVotingSystem.vote" Data="@vote" Visible="@(vote != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="voter" Component="voter" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@votersForVoterID" TextProperty="FullName" ValueProperty="VoterID" AllowClear=true
                         Placeholder="Choose voter" style="display: block; width: 100%" @bind-Value="@vote.VoterID" Name="VoterID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="candidate" Component="candidate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@candidatesForCandidateID" TextProperty="Name" ValueProperty="CandidateID" AllowClear=true
                         Placeholder="Choose candidate" style="display: block; width: 100%" @bind-Value="@vote.CandidateID" Name="CandidateID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Timestamp" Component="Timestamp" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@vote.Timestamp" Name="Timestamp" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Vote Proof" Component="VoteProof" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@vote.VoteProof" Name="VoteProof" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="add" Text="Generate Fake Candidates" Click="@(() => GenerateVotes())" />
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat"/>
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"/>
            </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

